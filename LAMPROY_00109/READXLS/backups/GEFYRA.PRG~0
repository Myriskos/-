//   endif
   cAITIOL :=  CONVAITIOL( cAITIOL )

   STT := ""
   STT += cHMER
   STT += cDATE
   STT += RPAD( CONVIDLOG(cIDLOG)    ,13," ")
   STT += RPAD( cPARAST   ,13," ")
   STT += RPAD( cAITIOL   ,25," ")
