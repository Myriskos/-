  */

  //----------------------------------------------------

  DO  CASE
        CASE LEFT( cIDLOG ,05)  == OEMTOANSI("30.00")
             cKK := "3"
        CASE LEFT( cIDLOG ,05)  == OEMTOANSI("70.00")
             cKK := "3"
        CASE LEFT( cIDLOG ,05)  == OEMTOANSI("70.03")
